<% title  current_user.name + "'s Profile" %>
<% css "users" %>


<!-- This is used for the profile system. -->
<div class="container">
	<%= form_for current_user, html: {class: "form well profile-form", autocomplete: "off"} do |f| %>

		<h1> Edit Profile </h1>

		<% if @user.errors.any? %>
			<div class="error_explanation">
				<div class="alert alert-error">
					The form contains <%= pluralize(@user.errors.count, "error") %>.
				</div>
				<ul>
					<% @user.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>

		<%= f.label :name %>
		<%= f.text_field :name, class: "form-control", type: "text"  %>

		<%= f.label :email %>
		<%= f.text_field :email, class: "form-control", type: "text"%>

		<%= f.label :password %>
		<%= f.password_field :password, class: "form-control", type: "password" %>
		<%= f.label :password_confirmation, "Confirmation" %>
		<%= f.password_field :password_confirmation, class: "form-control", type: "password" %>

		<%= f.submit "Sign up", class: "btn btn-large btn-primary", style: "margin-top: 15px;" %>
	<% end %>

</div>