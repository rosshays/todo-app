<% content_for :title, "Sign Up" %>

<!-- navigation bar -->
<div class="navbar navbar-fixed-top" role="navigation">
	<div class="container-fluid">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a class="navbar-brand" href="/">TODO PROJECT</a>
		</div>
		<div class="navbar-collapse collapse">
			<form class="navbar-form navbar-right">
				<button type="submit" class="btn btn-primary">Log In</button>
			</form>
		</div>
	</div>
</div>


<!-- page contents -->
<div class="container">
	<%= form_for @user, html: {class: 'form-signup well'} do |f| %>

		<%= f.label :name %>
		<%= f.text_field :name, class: "form-control", type: "text"  %>

		<%= f.label :email %>
		<%= f.text_field :email, class: "form-control", type: "text"%>

		<%= f.label :password %>
		<%= f.password_field :password, class: "form-control", type: "password" %>

		<%= f.label :password_confirmation, "Confirmation" %>
		<%= f.password_field :password_confirmation, class: "form-control", type: "password" %>

		<%= f.submit "Sign up", class: "btn btn-large btn-primary" %>
	<% end %>
</div>
