<% title "Sign up" %>
<% css "users" %>

<!-- page contents -->
<!-- This page creates a form for signing up. -->
<div class="container-fluid">
	<div class="row-fluid">
		<%= form_for @user, html: {class: 'form-signup well'} do |f| %>

			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control", type: "text"  %>

			<%= f.label :email %>
			<%= f.text_field :email, class: "form-control", type: "text"%>

			<%= f.label :password %>
			<%= f.password_field :password, class: "form-control", type: "password" %>

			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.password_field :password_confirmation, class: "form-control", type: "password" %>

			<%= f.submit "Sign up", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>